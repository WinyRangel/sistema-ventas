model Usuario {
  cveUsuario Int @id @default(autoincrement())
  nombre String @db.VarChar(250)
  apellidos String @db.VarChar(600)
  username String @db.VarChar(150)
  password String @db.VarChar(800)
  fechaRegistro DateTime @default(now())
  @@map("tbl_usuario")
}

model Usuarios {
  cveuser Int @id @default(autoincrement())
  nombre String @db.VarChar(250)
  apellidos String @db.VarChar(600)
  username String @db.VarChar(150)
  password String @db.VarChar(800)
  email String @db.VarChar(250)
  rol String @db.VarChar(250)
  fechaRegistro DateTime @default(now())
  @@map("usuarios")
}


model Rol {
  cveRol      Int     @id @default(autoincrement()) @map("cve_rol")
  descripcion String  @db.VarChar(250)
  clave       String  @db.VarChar(600)
  activo      Boolean @db.TinyInt()
  @@map("rol")
}

